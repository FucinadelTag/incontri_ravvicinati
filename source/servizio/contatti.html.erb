<div class="row">
  <div class="large-12 columns">

    <h1>Contatti:</h1>

    <div class="panel radius">
        <h3 class="subheader">Per informazioni sul progetto scrivi a:</h3>
        <hr>
            <p>
                <a href="mailto:info@incontri-ravvicinati.it" target="_blank">info@incontri-ravvicinati.it</a>
            </p>
    </div>

         Per informazioni sui singoli progetti scrivi a:

    <ul class="small-block-grid-1">
        <li>
        </li>
        <% find_resource_by_path('^percorsi/*', 'ordine').each do |resource| %>
        <li>
            <h2><%= resource.data.title %>:</h2>
            <div class="panel radius">
            <h3 class="subheader"><%= resource.data.biblioteca.upcase %></h3>
                <hr>
                    <p>
                        <%= resource.data.indirizzo %>
                    </p>

                <% if resource.data.orario %>
                    <h3>Orario di apertura</h3>
                    <hr>
                    <p>
                        <%= resource.data.orario.testo %>
                    </p>
                    <p>
                        <%= resource.data.orario.note %>
                    </p>
                <% end %>
            </div>
        </li>

        <% end %>

        <li>
              <div class="fb-like-box" data-href="https://www.facebook.com/pages/Incontri-ravvicinati/530089903777060" data-width="720" data-colorscheme="light" data-show-faces="true" data-header="true" data-stream="false" data-show-border="true"></div>
        </li>
    </ul>
  </div>
</div>